<p id="notice"><%= notice %></p>

<h1>Bible Verses</h1>

<table>
  <thead>
    <tr>
      <th>Verse num</th>
      <th>Verse text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bible_verses.each do |bible_verse| %>
      <tr>
        <td><%= bible_verse.verse_num %></td>
        <td><%= bible_verse.verse_text %></td>
        <td><%= link_to 'Show', bible_verse %></td>
        <td><%= link_to 'Edit', edit_bible_verse_path(bible_verse) %></td>
        <td><%= link_to 'Destroy', bible_verse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

